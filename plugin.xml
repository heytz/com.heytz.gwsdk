<?xml version='1.0' encoding='utf-8'?>
<plugin id="com.heytz.gwsdk" version="0.4.3" xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>gwsdk</name>
    <js-module name="gwsdk" src="www/gwsdk.js">
        <clobbers target="cordova.plugins.gwsdk"/>
    </js-module>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="gwsdk">
                <param name="ios-package" value="gwsdk"/>
            </feature>
        </config-file>
        <source-file src="src/ios/gwsdk.m"/>
        <source-file src="src/ios/gwsdk.h"/>
        <source-file src="src/ios/GwsdkUtils.h"/>
        <source-file src="src/ios/GwsdkUtils.m"/>
        <source-file framework="true" src="libEasyLink.a"/>
        <source-file framework="true" src="libLibSimpleConfig.a"/>
        <source-file framework="true" src="libEsptouch_v0.3.3.4_4.a"/>
        <source-file framework="true" src="libssl.a"/>
        <source-file framework="true" src="libcrypto.a"/>
        <framework src="SystemConfiguration.framework"/>
        <framework src="CoreTelephony.framework"/>
        <framework src="libc++.dylib"/>
        <framework custom="true" src="XPGWifiSDK.framework"/>
        <framework custom="true" src="openssl"/>
    </platform>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="gwsdk">
                <param name="android-package" value="com.heytz.gwsdk.gwsdk"/>
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/Gwsdk.java" target-dir="src/com/heytz/gwsdk/"/>
        <source-file src="src/android/HeytzApp.java" target-dir="src/com/heytz/gwsdk/"/>
        <source-file src="src/android/HeytzUtil.java" target-dir="src/com/heytz/gwsdk/"/>
        <source-file src="src/android/HeytzXPGWifiSDKListener.java" target-dir="src/com/heytz/gwsdk/"/>
        <source-file src="src/android/Operation.java" target-dir="src/com/heytz/gwsdk/"/>

        <source-file src="libs/armeabi/libBLEasyConfig.so" target-dir="libs/armeabi/"/>
        <source-file src="libs/armeabi/libsimpleconfiglib.so" target-dir="libs/armeabi/"/>
        <source-file src="libs/armeabi/libwavegen.so" target-dir="libs/armeabi/"/>
        <source-file src="libs/armeabi/libXPGConnect.so" target-dir="libs/armeabi/"/>


        <source-file src="libs/BLEasyConfig.jar" target-dir="libs"/>
        <source-file src="libs/easylink_only.jar" target-dir="libs"/>
        <source-file src="libs/json-lib-2.4-jdk15.jar" target-dir="libs"/>
        <source-file src="libs/libEsptouch_v0.3.3.4_3.jar" target-dir="libs"/>
        <source-file src="libs/LSFSK_1.0.jar" target-dir="libs"/>
        <source-file src="libs/OneShotConfig.jar" target-dir="libs"/>
        <source-file src="libs/simpleconfiglib.jar" target-dir="libs"/>
        <source-file src="libs/XPGWifiSDK.jar" target-dir="libs"/>
    </platform>
</plugin>
